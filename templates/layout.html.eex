<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="elixir-lang Slack group archive">
    <title>Elixir Slack archive</title>
    <link rel="stylesheet" type="text/css" href="/style.css">
    <%= if ga_tracking_id = Application.get_env(:slack_to_html, :ga_tracking_id) do %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= ga_tracking_id  %>', 'auto');
      ga('send', 'pageview');
    </script>
    <% end %>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h2>Cultivate - Slack group message archive</h2>
      </div>

      <%= content %>
    </div>

    <footer class="footer">
      This website was built using <a href="https://github.com/stevedomin/slack_to_html">slack_to_html</a>
    </footer>
  </body>
</html>
